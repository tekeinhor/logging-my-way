{% macro wave(inverse=true) -%}
<fu-wave
style="
--repeat: 5;
--shape-height: 5px;
--stroke-width: 2.5px;
--offset-x: 12.31;
--stroke-color: var(--bg-stroke);
--lower-color: var(--bg-primary);
--upper-color: {% if inverse %}var(--bg-secondary){% else %}var(--bg-primary){% endif %};
--offset-y: {% if inverse %}25{% else %}-40{% endif %};
"
></fu-wave>
{%- endmacro %}
