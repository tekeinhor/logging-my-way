				<a href="/" rel="home" id="home" {%- if url == "/" %} aria-current="page"{% endif %}>
					<div class="on-wide">{{ site.title | lower }}</div>
					<div class="on-narrow">{{ site.title | lower }}</div>
				</a>
				</div>
				<div class="header__right">
					<a href="/blog/" {%- if url == "/blog/" %} aria-current="page"{% endif %}>blog</a>
					<div class="switch">
						<div class="switch__on"><i class="icon fa-solid fa-moon"></i></div>
						<div class="switch__off"><i class="icon icon-sun"></i></div>
						<div class="switch__placeholder"></div>
					</div>
				</div>


			</div>
		</header>
		<main class="{{ mainClass }}">
			{{ content | safe }}
		</main>
		<footer id="footer">
			{{ macro_wave.wave(false) }}
			<div class="footer__content">
				<p>
					{% for link in footer_links %}
					{% if loop.index > 1 %}<i class="icon">✦</i>{% endif %}
					<a href="{{ link.url }}" {% if url == link.url %} ariacurrent="page"{% endif %}>{{ link.name }}</a>
					{%- endfor %}
				</p>
				<span id="copyright">©2024</span> {{ site.title | lower }}
			</div>
		</footer>
	</body>
</html>
