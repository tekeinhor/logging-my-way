<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="theme-color" content="{{ site.color }}">
		<meta http-equiv="Content-Security-Policy" content="default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: img.shields.io; script-src 'self' 'unsafe-inline'; object-src 'none'">
		<title>{{ title }}{% if title %} - {% endif %}{{ site.title }}</title>
		<!-- shiki-imports -->
		<link rel="stylesheet" href="{% asset "css/main.css" %}">
		<script type="module" src="{% asset "main.js" %}"></script>
		<script src="{% asset "vendors/medium-zoom.min.js" %}"></script>
		<link rel="shortcut icon" href="{{ site.pfp }}">
		<link rel="canonical" href="{{ url }}">
		<link rel="alternate feed" href="/feed.xml" type="application/atom+xml" title="{{ site.feedTitle }}">
		<link rel="alternate feed" href="/feed.json" type="application/feed+json" title="{{ site.feedTitle }}">
